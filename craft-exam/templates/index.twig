<!DOCTYPE html>
<html lang="en-US">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
		<meta charset="utf-8"/>
		<title>Welcome to Craft CMS</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover"/>
		<meta name="referrer" content="origin-when-cross-origin"/>
		<style>
			html,
			body {
				font-size: 16px;
				-webkit-text-size-adjust: 100%;
				height: 100%;
				font-family: system-ui, BlinkMacSystemFont, -apple-system, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
			}

			body {
				margin: 0;
				padding: 0;
				display: flex;
			}

            nav{ 
                background: #f9d2a5;
                padding: 30px;
                padding-left: 45px;
            }

            #name {
                color: #000;
                text-decoration: none;
                font-size: 2em;
            }

			h1 {
				margin-top: 0;
                color: #30BCED;
                text-decoration: underline;
			}

			h2 {
				margin-top: 24px;
				font-size: 1.5em;
                color: #F75590;
                text-decoration: underline dotted;
			}

			h2:first-child {
				margin-top: 0;
			}

            h3{ 
                color: #EF8A17;
            }

            summary{ 
                color: #EF8A17;
            }

            h4{
                font-size: 1.25em;
                color: #F75590;
            }

			p {
				line-height: 1.4em;
				margin-bottom: 1.4em;
			}

			ul {
				line-height: 1.3em;
				padding-left: 20px;
				margin-bottom: 0;
			}

			ul li {
				margin-bottom: 0.35em;
			}

			a {
				color: #0B69A3;
				text-decoration: none;
			}

			a:hover {
				text-decoration: underline;
			}

			.go {
				color: #0B69A3;
			}

			.go:after {
				padding-left: 4px;
				content: 'â†’';
				text-decoration: none !important;
			}

			small {
				color: hsl(211, 11%, 59%);
			}

			code {
				display: inline-block;
				color: #EF4E4E;
				padding: 0 2px;
				background: hsl(212, 60%, 97%);
				border-radius: 3px;
				line-height: 1.3;
				font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace;
				font-size: 0.9em;
			}

			#container {
				flex-grow: 1;
			}

			#modal {
				background: #dceecd;
			}

			#aside {
				background: #bfe9d3;
                overflow: auto;
			}

			.content {
				padding: 35px calc(35px + env(safe-area-inset-right));
			}
		</style>
	</head>
	<body class="ltr">
		<div id="container">
			<div id="modal">
				<div id="main">

                    <nav>
                        {% set branding = craft.entries()
                            .section('branding')
                            .slug('branding')
                            .one() %}

                            <img src="{{branding.logo.one().url}}" alt="Logo" width="100" height="150">
                        <h1 id="name">Floresco</h1>
                    </nav>

					<div class="content">

						<h1>Flowers</h1>

						{% set entryQuery = craft.entries()
                            .section('flowers')
                            .orderBy('title')
                            .leaves(true)
                            .all() %}

						<h4>
							{% for entry in entryQuery %}
								<h2>{{ entry.title }}</h2>

									<img src="{{ entry.picture.one().url }}" alt="Flower picture" width="200" height="250">

                                {{ hiddenInput('Leaves[leaves]', '') }}

                                    {{ tag('input', {
                                        type: 'checkbox',
                                        name: 'Leaves[leaves]',
                                        value: '1',
                                        checked: (entry.leaves ?? false) ? true : false,
                                    }) }}

                                {% if entry.leaves %}
                                    <p>With leaves</p>
                                {% else %}
                                    <p>Without leaves</p>
                                {% endif %}

                                <h4>{{ entry.price|money }}</h4>
                                
                                {% if entry.information %}
                                    <details>
                                        <summary>Information</summary>
                                            <p>{{ entry.information }}</p>
                                    </details>
                                {% endif %}

                                {% if entry.bloomingSeason|length %}
                                    <h3>Blooming Seasons</h3>
                                    <ul>
                                        {% for season in entry.bloomingSeason %}
                                        <li>{{season.label}}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}

							{% endfor %}
						</h4>
						</p>
					</div>
				</div>
				<div id="aside">
					<div class="content">
						<h1>Vases</h1>

						{% set entryQuery = craft.entries()
                            .section('vases')
                            .orderBy('title')
                            .leaves(true)
                            .all() %}

						<h4>
							{% for entry in entryQuery %}
								<h2>{{ entry.title }}</h2>

								<img src="{{ entry.picture.one().url }}" alt="Vase picture" width="200" height="250">

                                <h4>{{ entry.price|money }}</h4>
                                
                                {% if entry.information %}
                                    <details>
                                        <summary>Information</summary>
                                            <p>{{ entry.information }}</p>
                                    </details>
                                {% endif %}

							{% endfor %}
						</h4>
						</p>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
